---
import { ViewTransitions } from 'astro:transitions';
import Hero from '../components/Hero.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script
      data-astro-rerun
      src="https://kit.fontawesome.com/255fae0f13.js"
      crossorigin="anonymous"></script>
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <footer class="pb-8 pt-32 text-center">
      <p class="text-sm text-[rgb(var(--accent-dark))]">
        &copy; {new Date().getFullYear()} Luke MacKenzie
      </p>
    </footer>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 230, 215, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          0deg,
          rgb(133, 119, 150) 0%,
          rgb(38, 0, 82) 100%
        );
      }

      ::-webkit-scrollbar {
        width: 12px;
        height: 8px;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: rgb(var(--accent-dark));
      }
      html {
        font-family: system-ui, sans-serif;
        background: #ffffff;
      }

      body {
        background: linear-gradient(
          rgb(var(--accent-light)) 0%,
          white 40%,
          white 80%,
          rgb(var(--accent-light)) 100%
        );
      }

      /* footer {
        background: linear-gradient(
          0deg,
          rgba(var(--accent-light), 1) 0%,
          white 100%
        );
      } */

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
    </style>
  </body>
</html>
