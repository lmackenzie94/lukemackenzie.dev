---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import { siteTitle } from '../constants';

interface Props {
  title: string;
}

const { title: pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script
      data-astro-rerun
      src="https://kit.fontawesome.com/255fae0f13.js"
      crossorigin="anonymous"></script>
    <title>{pageTitle} | {siteTitle}</title>
    <meta name="description" content="Web Developer. Toronto." />
    <ViewTransitions />
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
    <Footer />
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 230, 215, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          0deg,
          rgb(130, 113, 152) 0%,
          rgb(38, 0, 82) 100%
        );
      }

      ::-webkit-scrollbar {
        width: 12px;
        height: 8px;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: rgb(var(--accent-dark));
      }
      html {
        font-family: system-ui, sans-serif;
        background: #ffffff;
      }

      body {
        color: #282828;
        background: linear-gradient(
          rgba(var(--accent-light), 0.8) 0%,
          rgb(245, 245, 245) 40%,
          rgb(245, 245, 245) 80%,
          rgba(var(--accent-light), 0.8) 110%
        );
      }

      /* footer {
        background: linear-gradient(
          0deg,
          rgba(var(--accent-light), 1) 0%,
          white 100%
        );
      } */

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
    </style>
  </body>
</html>
