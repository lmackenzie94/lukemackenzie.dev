---
import { Image } from 'astro:assets';
import { formatDate } from '../utils';

const { blog, index } = Astro.props;
const { title, image, publishDate } = blog.data;

const formattedDate = formatDate(publishDate);
---

<a
  href={`/blog/${blog.slug}`}
  transition:name={`blog-${title}-card`}
  class="group mx-auto max-w-lg bg-white border border-gray-300 rounded-2xl overflow-hidden transition-all duration-500 hover:shadow-lg hover:shadow-neutral-200/50 hover:-translate-y-1"
>
  <article>
    <Image
      src={image.src}
      alt={image.alt}
      format="webp"
      class="aspect-[2/1] border-b border-gray-200 object-cover object-top opacity-60 group-hover:opacity-100 group-focus:opacity-100 transition-opacity duration-500"
      widths={[800, 1200, 1600]}
      loading="eager"
    />
    <div
      class="p-4 bg-white text-center shadow-[0_-5px_20px_0_rgba(0,0,0,0.1)] group-hover:shadow-none group-focus:shadow-none transition-shadow duration-500"
    >
      <p class="text-xs text-gray-400 mb-2">{formattedDate}</p>
      <h3
        transition:name={`blog-${title}-title`}
        class="text-2xl font-bold text-gray-700 group-hover:text-black group-focus:text-black transition-colors"
      >
        {title}
      </h3>
    </div>
  </article>
</a>
