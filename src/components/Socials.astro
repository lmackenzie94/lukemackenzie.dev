---
import { socials } from '../constants';
---

<ul transition:name="socials" class="flex gap-1 sm:mb-2">
  {
    socials.map(social => (
      <li>
        <a
          href={social.url}
          target="_blank"
          rel="noopener noreferrer"
          class="w-10 h-10 flex justify-center items-center"
        >
          <p class="sr-only">{social.name}</p>
          <i
            class={`${social.icon} text-2xl text-secondary opacity-70 hover:opacity-90 focus:opacity-60 transition-opacity`}
          />
        </a>
      </li>
    ))
  }
</ul>
