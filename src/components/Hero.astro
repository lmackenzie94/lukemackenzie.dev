  <style>
    h1::after {
      content: '';
      display: block;
      width: 110%;
      left: -5%;
      height: 15%;
      bottom: 7%;
      background: rgb(var(--accent-inverse));
      position: absolute;
      mix-blend-mode: plus-lighter;
      z-index: 10;
      border-radius: 0.1em;
    }

    @media screen(sm) {
      h1::after {
        bottom: 5%;
      }
    }

    span.visible {
      opacity: 0.1;
      transform: translate3d(0, 0, 0);
    }
  </style>
</section>
