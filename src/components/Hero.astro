---
import { siteDescription, siteTitle } from '../constants';
import Socials from './Socials.astro';
---

<section
  class="container flex flex-col justify-center items-center pt-20 sm:pt-36 pb-24 z-10 relative"
>
  <Socials />

  <h1
    class="text-gradient text-4xl sm:text-5xl lg:text-6xl font-black relative"
  >
    {siteTitle}
  </h1>
  <p
    class="text-base sm:text-lg lg:text-xl text-gray-600 mt-2 font-mono tracking-tight"
  >
    {siteDescription}
  </p>

  <div
    aria-hidden="true"
    class="hidden sm:flex absolute top-[50%] lg:top-[45%] w-full justify-between max-w-5xl text-7xl lg:text-8xl md:px-4 text-purple"
  >
    <span
      aria-hidden="true"
      data-observe
      class="opacity-0 font-bold font-mono transition-all -translate-x-10 duration-200 delay-100"
    >
      &nbsp;{`<`}
    </span>
    <span
      aria-hidden="true"
      data-observe
      class="opacity-0 font-bold font-mono transition-all translate-x-10 duration-200 delay-100"
    >
      {`/>`}
    </span>
  </div>

