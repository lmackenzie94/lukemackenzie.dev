---
import { siteDescription, siteTitle } from '../constants';
import Socials from './Socials.astro';
---

<section
  class="container flex flex-col justify-center items-center pt-16 sm:pt-28 lg:pt-36 pb-16 sm:pb-28 z-10 relative font-display"
>
  <Socials />

  <h1 class="text-green text-[2.55rem] sm:text-6xl lg:text-7xl relative mt-2">
    {siteTitle}
  </h1>
  <p
    class="text-base sm:text-lg lg:text-xl text-black opacity-60 sm:mt-2 font-mono tracking-tight"
  >
    {siteDescription}
  </p>

  <div
    aria-hidden="true"
    class="hidden sm:flex absolute sm:top-[50%] md:top-[45%] w-full justify-between max-w-4xl text-6xl sm:text-7xl md:text-8xl md:px-4 text-purple"
  >
    <span
      data-observe
      class="opacity-0 font-bold transition-all -translate-x-10 duration-200 delay-100"
    >
      &nbsp;{`<`}
    </span>
    <span
      data-observe
      class="opacity-0 font-bold transition-all translate-x-10 duration-200 delay-100"
    >
      {`/>`}
    </span>
  </div>

