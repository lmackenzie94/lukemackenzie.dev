  <style>
    h1::after {
      content: '';
      display: block;
      width: 106%;
      left: -3%;
      height: 12%;
      bottom: 20%;
      background: rgb(var(--accent-inverse));
      position: absolute;
      mix-blend-mode: plus-lighter;
      z-index: 10;
      border-radius: 0.1em;
    }

    @media screen(sm) {
      h1::after {
        height: 17%;
        bottom: 6%;
      }
    }

    span.visible {
      opacity: 0.1;
      transform: translate3d(0, 0, 0);
    }
  </style>
