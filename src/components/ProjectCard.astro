---
import { Image } from 'astro:assets';

const { project, index } = Astro.props;
const { title, tags, images } = project.data;
const featuredImage = images[0];

// eager load first 3 images
const imageLoading = index < 3 ? 'eager' : 'lazy';
---

<a
  href={`/projects/${project.slug}`}
  transition:name={`project-${title}-card`}
  class="card group mx-auto max-w-lg bg-white border border-gray-200 rounded-2xl overflow-hidden transition-shadow duration-500 hover:shadow-lg hover:shadow-neutral-200/50"
>
  <article>
    <Image
      src={featuredImage.src}
      alt={featuredImage.alt}
      format="webp"
      class="aspect-[2/1] border-b border-gray-100 object-cover object-top opacity-60 group-hover:opacity-100 group-focus:opacity-100 transition-opacity duration-500"
      widths={[800, 1200, 1600]}
      loading={imageLoading}
    />
    <div
      class="p-4 bg-white shadow-[0_-5px_20px_0_rgba(0,0,0,0.1)] group-hover:shadow-none group-focus:shadow-none transition-shadow duration-500"
    >
      <h3
        transition:name={`project-${title}-title`}
        class="text-2xl font-bold text-center mb-1 text-gray-700 group-hover:text-black group-focus:text-black transition-colors"
      >
        {title}
      </h3>

      <ul
        transition:name={`project-${title}-tags`}
        class="text-center text-balance saturate-[.3] group-hover:saturate-100 group-focus:saturate-100"
      >
        {
          tags.map((tag: string, index: number) => (
            <li
              class={`text-xxs tracking-tight font-mono rounded-full px-3 py-1 mr-1 mt-2 inline-block ${index % 2 === 0 ? 'bg-purple-light text-purple' : 'bg-green-light text-green'}`}
            >
              {tag}
            </li>
          ))
        }
      </ul>
    </div>
  </article>
</a>
